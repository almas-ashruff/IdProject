<%- include("partials/header"); -%>
    <div class="container centered signup">
        <h1>Sign Up!</h1>

        <div class="row ">
            <div class="card ">
                <div class="card-body ">

                    <!-- Makes POST request to /signup route -->
                    <form action="/signup" method="POST">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <center>
                                <input type="email" class="form-control" name="username" placeholder="Enter your email" required>
                            </center>
                            <br>
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <center>
                                <input type="password" class="form-control" name="password" placeholder="Enter your password" minlength="6" required>
                            </center>
                        </div>
                        <p class="css-alert" style="visibility: <%= doesntexistvisible%> ; ">Account does not exist</p>

                        <button type="submit" class="btn btn-primary button">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include("partials/footer"); -%>